function addMovie() {
    const title = titleInput.value.trim();
    const year = Number(yearInput.value);

    if (!title || !year) {
        alert("Introduce título y año.");
        return;
    }

    movies.push({ id: nextId++, title, year });
    titleInput.value = "";
    yearInput.value = "";
    renderMovies();
}

function deleteMovieById(id) {
  movies = movies.filter(m => m.id !== id);
  renderMovies();
}

